import subprocess
import argparse
import pathlib

CWD: str = pathlib.Path.cwd()
SWD: pathlib.Path = pathlib.Path(__file__).absolute().parent
DESCRIPTION: str = "Convenience script for executing ReliQ program"

if __name__ == '__main__':
    # parse arguments
    parser = argparse.ArgumentParser(
        description = DESCRIPTION,
        formatter_class = argparse.ArgumentDefaultsHelpFormatter
    )
    parser.add_argument(
        '-e',
        '--executable',
        help = 'Target executable',
        type = str,
        required = True
    )
    parser.add_argument(
        '-l',
        '--local',
        help = 'Run locally (equivalent to UPC++ -localhost)',
        type = str,
        choices = ["true", "false"],
        default = "false"
    )
    parser.add_argument(
        '-n',
        help = 'Number of locales (tasks)',
        type = str,
        default = "1"
    )
    args = parser.parse_args()

    # execute ReliQ program
    cmd = str(SWD / 'external' / 'bin' / 'upcxx-run')
    cmd += ' -n ' + args.n
    cmd += ' -localhost ' if args.local == 'true' else ' '
    cmd += str(SWD / 'bin' / args.executable)
    subprocess.run(cmd, shell = True, check = True)