#!/bin/bash
: '
  ReliQ lattice field theory framework: https://github.com/reliq-lft/ReliQ
  Source file: build/configure
  Contact: reliq-lft@proton.me

  Author: Curtis Taylor Peterson <curtistaylorpetersonwork@gmail.com>

  MIT License
  
  Copyright (c) 2025 reliq-lft
  
  Permission is hereby granted, free of charge, to any person obtaining a copy
  of this software and associated documentation files (the "Software"), to deal
  in the Software without restriction, including without limitation the rights
  to use, copy, modify, merge, publish, distribute, sublicense, and/or sell
  copies of the Software, and to permit persons to whom the Software is
  furnished to do so, subject to the following conditions:

  The above copyright notice and this permission notice shall be included in all
  copies or substantial portions of the Software.
  
  THE SOFTWARE IS PROVIDED "AS IS", WITHOUT WARRANTY OF ANY KIND, EXPRESS OR
  IMPLIED, INCLUDING BUT NOT LIMITED TO THE WARRANTIES OF MERCHANTABILITY,
  FITNESS FOR A PARTICULAR PURPOSE AND NONINFRINGEMENT. IN NO EVENT SHALL THE
  AUTHORS OR COPYRIGHT HOLDERS BE LIABLE FOR ANY CLAIM, DAMAGES OR OTHER LIABILITY, 
  WHETHER IN AN ACTION OF CONTRACT, TORT OR OTHERWISE, ARISING FROM, OUT OF OR IN 
  CONNECTION WITH THE SOFTWARE OR THE USE OR OTHER DEALINGS IN THE SOFTWARE.
'

# Parse command line arguments
DISABLE_CUDA=false
DISABLE_HIP=false
for arg in "$@"; do
    case $arg in
        --disable-cuda)
            DISABLE_CUDA=true
            shift
            ;;
        --disable-hip)
            DISABLE_HIP=true
            shift
            ;;
        --help|-h)
            echo "ReliQ Configuration Script"
            echo ""
            echo "Usage: ./configure [OPTIONS]"
            echo ""
            echo "Options:"
            echo "  --disable-cuda    Disable CUDA support even if available"
            echo "  --disable-hip     Disable HIP/ROCm support even if available"
            echo "  --help, -h        Show this help message"
            echo ""
            exit 0
            ;;
    esac
done

PYTHON="/usr/bin/python3"

CWD="$(pwd)"
SWD="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd && cd ${CWD})"
TMP="${CWD}/cmake_tmp"
DMY="${TMP}/hello_world.cpp"

#CMAKE="${CWD}/external/bin/cmake"
CMAKE="cmake"

mkdir -p $TMP

echo "-- Created temporary directory for cmake: $TMP"

cp $SWD/build/hello_world.cpp $DMY
echo "-- Copied temporary dummy file ${SWD}/build/hello_world.cpp to ${DMY}"

cp $SWD/build/CMakeLists.txt $CWD/CMakeLists.txt
echo "-- Copied temporary ${SWD}/build/CMakeLists.txt to ${CWD}/CMakeLists.txt"

$CMAKE -DKokkos_DIR=$CWD/external/lib/cmake/Kokkos -B $TMP 2> $TMP/build.log
echo "-- Finished dummy build"

$PYTHON $SWD/build/configure.py --cmake_tmp=$CWD/cmake_tmp
echo "-- Extracted compilation Kokkos flags from dummy build"

chmod u+x $CWD/external/bin/kokkos-meta
echo "-- Saved Kokkos meta script to ${CWD}/external/bin/kokkos-meta"

rm -r $TMP
echo "-- Removed temporary directory: ${TMP}"

rm $CWD/CMakeLists.txt
echo "-- Removed temporary: ${CWD}/CMakeLists.txt"

ln -sf $SWD/build $CWD/
echo "-- Created symlink of ${SWD}/build in ${CWD}"

ln -sf $SWD/src $CWD/
echo "-- Created symlink of ${SWD}/src in ${CWD}"

ln -sf $SWD/build/Makefile $CWD/
echo "-- Created symlink of ${SWD}/build/Makefile in ${CWD}"

cp $SWD/build/reliq $CWD/
echo "-- Copied ${SWD}/build/reliq to ${CWD}"

mkdir -p $CWD/data

### CUDA detection and configuration ###

echo "-- Detecting CUDA installation..."

# Try to find nvcc
NVCC_PATH=""
if command -v nvcc &> /dev/null; then
    NVCC_PATH=$(command -v nvcc)
    echo "-- Found nvcc at: $NVCC_PATH"
else
    echo "-- nvcc not found in PATH"
fi

# Try to find CUDA toolkit
CUDA_ROOT=""
CUDA_LIB_DIR=""
if [ -d "/usr/local/cuda" ]; then
    CUDA_ROOT="/usr/local/cuda"
    CUDA_LIB_DIR="$CUDA_ROOT/lib64"
    echo "-- Found CUDA toolkit at: $CUDA_ROOT"
elif [ -n "$CUDA_HOME" ] && [ -d "$CUDA_HOME" ]; then
    CUDA_ROOT="$CUDA_HOME"
    CUDA_LIB_DIR="$CUDA_ROOT/lib64"
    echo "-- Found CUDA toolkit at: $CUDA_ROOT (from CUDA_HOME)"
elif [ -n "$NVCC_PATH" ]; then
    # CUDA might be in system paths (Ubuntu package installation)
    CUDA_ROOT=$(dirname $(dirname $NVCC_PATH))
    if [ -d "/usr/lib/x86_64-linux-gnu" ] && ls /usr/lib/x86_64-linux-gnu/libcudart* &>/dev/null; then
        CUDA_LIB_DIR="/usr/lib/x86_64-linux-gnu"
        echo "-- Found CUDA toolkit at: $CUDA_ROOT (system installation)"
        echo "-- Using CUDA libraries from: $CUDA_LIB_DIR"
    elif [ -d "$CUDA_ROOT/lib64" ]; then
        CUDA_LIB_DIR="$CUDA_ROOT/lib64"
        echo "-- Found CUDA toolkit at: $CUDA_ROOT"
    else
        CUDA_ROOT=""
        echo "-- CUDA libraries not found"
    fi
else
    echo "-- CUDA toolkit not found"
fi

# Determine if CUDA should be enabled
USE_CUDA="false"
if [ "$DISABLE_CUDA" = true ]; then
    echo "-- CUDA compilation: DISABLED (--disable-cuda flag)"
elif [ -n "$NVCC_PATH" ] && [ -n "$CUDA_ROOT" ]; then
    # Check if CUDA-capable device exists
    HAS_GPU=false
    
    if command -v nvidia-smi &> /dev/null; then
        GPU_COUNT=$(nvidia-smi --query-gpu=name --format=csv,noheader 2>/dev/null | wc -l)
        if [ "$GPU_COUNT" -gt 0 ]; then
            HAS_GPU=true
        fi
    fi
    
    # Also check for NVIDIA device files
    if [ "$HAS_GPU" = false ] && [ -e /dev/nvidia0 ]; then
        HAS_GPU=true
    fi
    
    if [ "$HAS_GPU" = true ]; then
        USE_CUDA="true"
        echo "-- CUDA compilation: ENABLED"
    else
        echo "-- CUDA compilation: DISABLED (no CUDA-capable GPU detected)"
        echo "-- Note: CUDA toolkit found but no GPU available"
        echo "-- Use --disable-cuda to suppress this check"
    fi
    
    # Detect GPU architecture
    GPU_ARCH="sm_70"
    if [ "$USE_CUDA" = "true" ] && command -v nvidia-smi &> /dev/null; then
        GPU_NAME=$(nvidia-smi --query-gpu=name --format=csv,noheader 2>/dev/null | head -1)
        if [ -n "$GPU_NAME" ]; then
            echo "-- Detected GPU: $GPU_NAME"
            # Map common GPUs to architectures
            case "$GPU_NAME" in
                *"A100"*|*"A40"*|*"A30"*) GPU_ARCH="sm_80" ;;
                *"A6000"*|*"A5000"*|*"A4000"*) GPU_ARCH="sm_86" ;;
                *"RTX 40"*|*"4090"*|*"4080"*) GPU_ARCH="sm_89" ;;
                *"RTX 30"*|*"3090"*|*"3080"*) GPU_ARCH="sm_86" ;;
                *"V100"*) GPU_ARCH="sm_70" ;;
                *"T4"*) GPU_ARCH="sm_75" ;;
            esac
            echo "-- Using GPU architecture: $GPU_ARCH"
        else
            echo "-- Using default GPU architecture: $GPU_ARCH"
        fi
    elif [ "$USE_CUDA" = "true" ]; then
        echo "-- Using default GPU architecture: $GPU_ARCH"
    fi
else
    echo "-- CUDA compilation: DISABLED (nvcc or CUDA toolkit not found)"
fi

# Generate nim.cfg
echo "-- Generating build/nim.cfg..."

cat > $CWD/build/nim.cfg << EOF
@if nvcc:
  # CUDA compilation settings
  # Auto-generated by configure script on $(date)
  cc = "nvcc"
  nvcc.exe = "$SWD/build/nvcc_wrapper.sh"
  nvcc.linkerexe = "$SWD/build/nvcc_wrapper.sh"
  # Treat .cpp files as CUDA source
  passC = "-x cu"
  passC = "-arch=$GPU_ARCH"
  passC = "--extended-lambda"
  # Library paths - these get wrapped in -Xcompiler by Nim
  passL = "-L$CWD/external/lib"
EOF

# Add MPI paths if found
if [ -d "$CWD/external/spack" ]; then
    MPI_LIB=$(find $CWD/external/spack/opt/spack -type d -name "openmpi-*" -path "*/lib" 2>/dev/null | head -1)
    if [ -n "$MPI_LIB" ]; then
        echo "  passL = \"-L$MPI_LIB\"" >> $CWD/build/nim.cfg
        echo "-- Added MPI library path: $MPI_LIB"
    fi
    
    GA_LIB=$(find $CWD/external/spack/opt/spack -type d -name "globalarrays-*" -path "*/lib" 2>/dev/null | head -1)
    if [ -n "$GA_LIB" ]; then
        echo "  passL = \"-L$GA_LIB\"" >> $CWD/build/nim.cfg
        echo "-- Added Global Arrays library path: $GA_LIB"
    fi
    
    BLAS_LIB=$(find $CWD/external/spack/opt/spack -type d -name "openblas-*" -path "*/lib" 2>/dev/null | head -1)
    if [ -n "$BLAS_LIB" ]; then
        echo "  passL = \"-L$BLAS_LIB\"" >> $CWD/build/nim.cfg
        echo "-- Added OpenBLAS library path: $BLAS_LIB"
    fi
fi

# Add CUDA library path
if [ "$USE_CUDA" = "true" ]; then
    echo "  passL = \"-L$CUDA_LIB_DIR\"" >> $CWD/build/nim.cfg
    echo "-- Added CUDA library path: $CUDA_LIB_DIR"
fi

echo "@end" >> $CWD/build/nim.cfg
echo "-- Generated build/nim.cfg successfully"

# Update Makefile.nims with useCuda setting
echo "-- Updating Makefile.nims with CUDA setting..."
sed -i "s/^const useCuda = .*/const useCuda = $USE_CUDA/" $CWD/build/Makefile.nims
echo "-- Set useCuda = $USE_CUDA in Makefile.nims"

################################################################################
# HIP/ROCm Detection
################################################################################

echo ""
echo "-- Checking for HIP/ROCm support..."

if [ "$DISABLE_HIP" = true ]; then
    echo "-- HIP compilation: DISABLED (manually disabled with --disable-hip)"
    USE_HIP="false"
else
    # Find hipcc compiler
    HIPCC_PATH=$(command -v hipcc 2>/dev/null)
    
    if [ -z "$HIPCC_PATH" ]; then
        echo "-- HIP compilation: DISABLED (hipcc not found)"
        USE_HIP="false"
    else
        echo "-- Found hipcc: $HIPCC_PATH"
        
        # Find ROCm installation
        ROCM_PATH=""
        if [ -d "/opt/rocm" ]; then
            ROCM_PATH="/opt/rocm"
        elif [ -n "$ROCM_HOME" ] && [ -d "$ROCM_HOME" ]; then
            ROCM_PATH="$ROCM_HOME"
        elif [ -d "/usr" ] && [ -f "/usr/include/hip/hip_runtime.h" ]; then
            ROCM_PATH="/usr"
        fi
        
        if [ -z "$ROCM_PATH" ]; then
            echo "-- HIP compilation: DISABLED (ROCm installation not found)"
            USE_HIP="false"
        else
            echo "-- Found ROCm: $ROCM_PATH"
            
            # Check for AMD GPU presence
            HAS_AMD_GPU=false
            
            # Method 1: Check rocm-smi
            if command -v rocm-smi &> /dev/null; then
                GPU_COUNT=$(rocm-smi --showproductname 2>/dev/null | grep -c "GPU" || echo "0")
                if [ "$GPU_COUNT" -gt 0 ]; then
                    HAS_AMD_GPU=true
                    echo "-- Found $GPU_COUNT AMD GPU(s) via rocm-smi"
                fi
            fi
            
            # Method 2: Check for /dev/kfd (AMD GPU kernel driver)
            if [ "$HAS_AMD_GPU" = false ] && [ -e /dev/kfd ]; then
                HAS_AMD_GPU=true
                echo "-- Found AMD GPU via /dev/kfd device"
            fi
            
            if [ "$HAS_AMD_GPU" = true ]; then
                USE_HIP="true"
                echo "-- HIP compilation: ENABLED"
                
                # Detect GPU architecture (gfx target)
                GPU_ARCH="gfx906"  # Default fallback (MI50/MI60)
                if command -v rocminfo &> /dev/null; then
                    DETECTED_ARCH=$(rocminfo 2>/dev/null | grep "Name:" | grep "gfx" | head -1 | awk '{print $2}')
                    if [ -n "$DETECTED_ARCH" ]; then
                        GPU_ARCH="$DETECTED_ARCH"
                        echo "-- Detected GPU architecture: $GPU_ARCH"
                    else
                        echo "-- Using default GPU architecture: $GPU_ARCH"
                    fi
                else
                    echo "-- Using default GPU architecture: $GPU_ARCH (rocminfo not available)"
                fi
                
                # Generate nim_hip.cfg for HIP configuration
                HIP_CFG="$CWD/build/nim_hip.cfg"
                echo "-- Generating $HIP_CFG"
                
                cat > "$HIP_CFG" << EOF
# Auto-generated HIP configuration for ReliQ
# Generated: $(date)
# ROCm Path: $ROCM_PATH
# GPU Architecture: $GPU_ARCH

# Use hipcc compiler
--cc:clang
--clang.exe:hipcc
--clang.linkerexe:hipcc

# ROCm paths
--passC:"-I$ROCM_PATH/include"
--passL:"-L$ROCM_PATH/lib"
--passL:"-lamdhip64"

# GPU architecture
--passC:"--offload-arch=$GPU_ARCH"

# Add hipcc_wrapper to PATH for Global Arrays compatibility
--putEnv:"PATH=\$PWD/bin:\$PATH"

EOF
                echo "-- Generated: $HIP_CFG"
                
                # Create hipcc wrapper symlink in build/bin
                mkdir -p $CWD/build/bin
                if [ ! -f $CWD/build/bin/hipcc ]; then
                    cp $CWD/build/hipcc_wrapper.sh $CWD/build/bin/hipcc
                    chmod +x $CWD/build/bin/hipcc
                    echo "-- Installed hipcc wrapper in build/bin/"
                fi
            else
                USE_HIP="false"
                echo "-- HIP compilation: DISABLED (no AMD GPU detected)"
                echo "-- Note: ROCm toolkit found but no AMD GPU available"
            fi
        fi
    fi
fi

# Update useHip flag in Makefile.nims
if grep -q "^const useHip" $CWD/build/Makefile.nims; then
    sed -i "s/^const useHip = .*/const useHip = $USE_HIP/" $CWD/build/Makefile.nims
else
    # Add useHip constant after useCuda line
    sed -i "/^const useCuda/a const useHip = $USE_HIP" $CWD/build/Makefile.nims
fi
echo "-- Set useHip = $USE_HIP in Makefile.nims"

### poem, because why not

center() {
    local string="$1"
    local cols=${COLUMNS:-$(tput cols)}
    local indent=$(( (cols - ${#string}) / 2 ))

    if (( indent > 0 )); then
        printf "%*s%s\\n" "${indent}" " " "${string}"
    else
        printf "%s\\n" "${string}" # If string is too long, just print it
    fi
}

echo ""
center "O------------------------------------------------------O"
center "O---O Enjoy your time with ReliQ, fellow traveler! O---O"
center "O------------------------------------------------------O"
echo ""
echo "\"The Zen of Python\" by Tim Peters"
echo ""
echo "Beautiful is better than ugly."
echo "Explicit is better than implicit."
echo "Simple is better than complex."
echo "Complex is better than complicated."
echo "Flat is better than nested."
echo "Sparse is better than dense."
echo "Readability counts."
echo "Special cases aren't special enough to break the rules."
echo "Although practicality beats purity."
echo "Errors should never pass silently."
echo "Unless explicitly silenced."
echo "In the face of ambiguity, refuse the temptation to guess."
echo "There should be one-- and preferably only one --obvious way to do it."
echo "Although that way may not be obvious at first unless you're Dutch."
echo "Now is better than never."
echo "Although never is often better than *right* now."
echo "If the implementation is hard to explain, it's a bad idea."
echo "If the implementation is easy to explain, it may be a good idea."
echo "Namespaces are one honking great idea -- let's do more of those!"
echo ""
echo "Source: https://peps.python.org/pep-0020/"
echo "See, also, \"The Zen of Nim\": https://nim-lang.org/blog/2021/11/15/zen-of-nim.html"
echo ""
echo "Contact: reliq-lft@protonmail.me"
echo ""